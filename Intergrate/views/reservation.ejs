<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hestia Hotels</title>
    <link href= "/public/assets/styles.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <nav>
            <img src="/public/images/HotelPixelArt.png" style="width:50px;height:50px;float: left;">
            <h1 class="nav-heading"><a href="/">Hestia Hotels</a></h1>
        </nav>
    </header>

    <h1>Page de reservation</h1>
    <hr>
    <h2 class="h2-intro">Metez vos criteres</h2>

    
    <% const hoteloptions = hotels; %>    
    <% const villeoptions = villes; %>
    <% const superficieoptions = superficie; %>
    <% const nchambresoptions = nchambres; %>
    <% const capaciteoptions = ['1','2','3','4','5', 'No preferance']; %>
    <% const categorieoptions = ['5','4','3','2', 'No preferance']; %>
    
    <form action="reservation" method ="post">
        <label for="dropdown">Sélectionner votre hôtel de choix:</label>
        <select id="chaine_hotel" name="chaine_hotel">
            <% hoteloptions.forEach(option => { %>
                <option value="<%= option %>"><%= option %></option>
            <% }); %>
        </select>
        <br>

        <label for="dropdown">Dans quelle ville voulez-vous restez?:</label>
        <select id="ville" name="ville">
            <% villeoptions.forEach(option => { %>
                <option value="<%= option %>"><%= option %></option>
            <% }); %>
        </select>
        <br>

        <label for="dateInput">De quelle à quelle data?:</label>
        <input type="date" id="startdate" name="startdate"> To 
        <input type="date" id="enddate" name="enddate">
        
        <br>

        <label for="dropdown">Combien de personnes restes?</label>  
        <select id="capacite" name = "capacite">
            <% capaciteoptions.forEach(option => { %>
                <option value="<%= option %>"><%= option %></option>
            <% }); %>            
        </select>
        <br>

        <label for="dropdown">Catégorie?</label>  
        <select id="categorie" name = "categorie">
            <% categorieoptions.forEach(option => { %>
                <option value="<%= option %>"><%= option %></option>
            <% }); %>            
        </select>
        <br>

        <label for="dropdown">Superficie?</label>  
        <select id="superficie" name = "superficie">
            <% superficieoptions.forEach(option => { %>
                <option value="<%= option %>"><%= option %></option>
            <% }); %>            
        </select>
        <br>

        <label for="dropdown">Le nombre de chambres dans l'hôtel?</label>  
        <select id="nchambres" name = "nchambres">
            <% nchambresoptions.forEach(option => { %>
                <option value="<%= option %>"><%= option %></option>
            <% }); %>            
        </select>
        <br>

        <label for="dateInput">De combin à combien voulez-vous dépenser?:</label>
        <input type="text" id="minprice" name="minprice"> À
        <input type="text" id="maxprice" name="maxprice">
        
        <br>
        <input type="submit" value="Submit">
    </form>

</body>
</html>
